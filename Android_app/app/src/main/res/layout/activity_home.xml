<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="elysium.moodanalyser.HomeActivity">


    <ProgressBar
        android:id="@+id/pbHeaderProgress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content" >
    </ProgressBar>
    <TextView
        android:layout_width="match_parent"
        android:text="Contact ILife to get guidance for your anxiety\n7893078930"
        android:clickable="true"
        android:background="@drawable/rounded_shape_callhelp"
        android:id="@+id/help_call"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@+id/text_prom"
        android:textSize="14dp"
        android:padding="10dp"
        android:autoLink="phone"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
    android:id="@+id/Chat_list"
    android:scrollbars="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>


</LinearLayout>
