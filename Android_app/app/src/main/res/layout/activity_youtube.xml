<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient1"
    android:padding="10dp"
    tools:context="elysium.moodanalyser.FacebookActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="30dp"
        android:orientation="vertical"
        >


        <ImageView

            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:clickable="true"
            android:onClick="open_website"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/youtube" />



        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:text="@string/extract_yb_api"/>

        <EditText
            android:id="@+id/youtube_api_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_shape_trans"
            android:drawableLeft="@drawable/ic_code_white_24dp"
            android:drawablePadding="10dp"
            android:hint="Youtube API Key"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:background="@drawable/ic_public_white_24dp"
            android:onClick="open_profile"/>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:text="@string/get_channel_id" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:id="@+id/channel_id"
            android:fontFamily="sans-serif"
            android:drawableLeft="@drawable/password"
            android:hint="Channel ID"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_shape_trans"/>
<!--
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:fontFamily="sans-serif"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/password"
            android:hint="Confirm Password"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_shape_trans"/>

-->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Finish"
            android:onClick="finish_reg"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:padding="10dp"
            android:drawableRight="@drawable/ic_arrow_forward_white_24dp"
            android:textColor="#FFFFFFFF"
            android:background="@drawable/rounded_shape_trans_darker"/>

    </LinearLayout>

</RelativeLayout>
